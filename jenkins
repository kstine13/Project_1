node {    

      def app     

      stage('Clone repository') {               

             

            checkout scm    

      }     

      stage('Build image') {         

       

            app = docker.build("kstine13/tag:latest")    

       }     

      stage('Test image') {           

            app.inside {            

             

             sh 'echo "Tests passed"'        

            }    

        }     

       stage('Push image') {

                                                  docker.withRegistry('https://registry.hub.docker.com/repository/docker/kstine13/tag', 'git') {            

       app.push("${env.BUILD_NUMBER}")            

       app.push("latest")        

              }    

           }

        }
